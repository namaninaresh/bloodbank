<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../includes/header'); %>
  </head>

  <body>
    <%- include('../includes/navbar') %>

    <section class="blood-donated">
      <div class="container">
        <div class="total-blood-donated">
          <div class="card">
            <div class="card-body card-blue">
              <h3>Total Blood Units available:</h3>
              <h1>
                <% if( data.totalblood >0 && data.totalblood != null){ %>
                <%=data.totalblood %> <% } else { %> 0 <% }%> units
              </h1>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
              <h3>Total Blood Donated till Now:</h3>
              <h1>
                <% if(data.bloodonated !=null & data.bloodonated >0){ %>
                <%=data.bloodonated %> <% } else { %> 0 <% }%> units
              </h1>
            </div>
          </div>
        </div>
        <div class="blood-donated-details">
          <div class="card">
            <div class="card-body">
              <% if(info.length>0) { %>
              <table>
                <thead>
                  <tr>
                    <th>#</th>
                    <th scope="col">Message</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% info.forEach((element,index )=> { %>
                  <tr>
                    <td><%= index+1%></td>
                    <td>
                      Donated blood to user: <%= element.touser %>, Units <%=
                      element.units %>
                    </td>
                    <td><%= element.ondate %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <% } else {%>
              <div class="notification" style="width: 100%; padding: 0">
                <div class="alert alert-success" style="padding: 2rem">
                  You haven't Donated till now
                </div>
              </div>
              <% }%>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('../includes/subFooter'); %>
    <script src="./javascripts/mobileNav.js"></script>
  </body>
</html>
