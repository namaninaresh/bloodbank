<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../header'); %>
  </head>
  <body>
    <nav class="nav">
      <div class="container">
        <a href="/index" class="logo"
          ><svg class="icon">
            <use xlink:href="../images/sprite.svg#droplet-fill"></use>
          </svg>
          Blood Bank
        </a>
        <ul class="list">
          <li class="nav__item">
            <a href="/auth/register" class="btn btn-primary">Register</a>
          </li>
        </ul>
      </div>
    </nav>
    <section class="error">
      <div class="container">
        <div class="" style="width: 40%; margin: 0 auto; padding: 2rem 0">
          <% if(loginError) {%>
          <div class="alert alert-danger" style="padding: 2rem">
            <%= loginError %>
          </div>
          <%} %>
        </div>
      </div>
    </section>
    <section class="login">
      <div class="container">
        <div class="justify-center">
          <form action="/auth/login" method="POST" class="login-form">
            <h1>Login</h1>
            <div class="form-input-material">
              <input
                type="text"
                id="username"
                class="form-control-material"
                name="username"
                placeholder=""
                autocomplete="off"
                required
              />
              <label for="username">Username</label>
            </div>
            <div class="form-input-material">
              <input
                type="password"
                id="password"
                class="form-control-material"
                name="password"
                placeholder=""
                autocomplete="off"
                required
              />
              <label for="password">Password</label>
            </div>
            <button class="btn" type="submit">Login</button>
            <a href="#">forgot Password ?</a>
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
