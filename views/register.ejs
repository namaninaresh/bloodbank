<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../header'); %>
  </head>
  <body>
    <%- include('../includes/homeNav'); %>
    <section class="error">
      <div class="container">
        <div class="" style="width: 40%; margin: 0 auto; padding: 2rem 0">
          <% if(registerError) {%>
          <div class="alert alert-danger" style="padding: 2rem">
            <%= registerError %>
          </div>
          <%} if(registerSuccess) { %>
          <div class="alert alert-success" style="padding: 2rem">
            <%= registerSuccess %>
          </div>

          <% } %>
        </div>
      </div>
    </section>
    <section class="register">
      <div class="container">
        <div class="justify-center">
          <form action="/auth/register" method="POST" class="login-form">
            <h1>Registration</h1>
            <div style="display: flex; width: 100%; margin-bottom: 2rem">
              <label style="flex: 0 0 45%">Role </label>
              <div style="display: flex">
                <input
                  type="radio"
                  id="donar"
                  name="role"
                  value="donar"
                  style="margin-left: 1rem"
                  class="form-control-material"
                  onchange="check()"
                />
                <label for="male" style="margin-left: 1rem"> Donar </label
                ><br />
                <input
                  type="radio"
                  id="receptor"
                  name="role"
                  value="receptor"
                  style="margin-left: 1rem"
                  class="form-control-material"
                  onchange="check()"
                />
                <label for="female" style="margin-left: 1rem">Receptor</label
                ><br />
              </div>
            </div>
            <div style="display: flex">
              <div class="form-input-material" style="flex: 0 0 45%">
                <input
                  type="text"
                  id="firstname"
                  class="form-control-material"
                  name="firstname"
                  placeholder=""
                  autocomplete="off"
                  required
                />
                <label for="firstname">First Name</label>
              </div>
              <div class="form-input-material" style="flex: 0 0 45%">
                <input
                  type="text"
                  id="lastname"
                  class="form-control-material"
                  name="lastname"
                  placeholder=""
                  autocomplete="off"
                  required
                />
                <label for="lastname">Last Name</label>
              </div>
            </div>
            <div style="display: flex">
              <div class="form-input-material" style="flex: 0 0 50%">
                <input
                  type="text"
                  id="username"
                  class="form-control-material"
                  name="username"
                  placeholder=""
                  autocomplete="off"
                  required
                />
                <label for="username" id="usernameLabel">User Name </label>
              </div>
              <div class="form-input-material">
                <input
                  type="text"
                  id="password"
                  class="form-control-material"
                  name="password"
                  placeholder=""
                  autocomplete="off"
                  required
                />
                <label for="password">Password</label>
              </div>
            </div>
            <div class="form-input-material">
              <textarea
                class="form-control-material"
                name="address"
                id="address"
                required
              >
              </textarea>
              <label for="address">Address</label>
            </div>
            <div style="display: flex">
              <div class="form-input-material" style="flex: 0 0 50%">
                <input
                  type="text"
                  id="countrycode"
                  class="form-control-material"
                  name="countrycode"
                  placeholder=""
                  autocomplete="off"
                  required
                />
                <label for="countrycode">Country Code</label>
              </div>
              <div class="form-input-material">
                <input
                  type="number"
                  id="contactno"
                  class="form-control-material"
                  name="contactno"
                  placeholder=""
                  autocomplete="off"
                  required
                />
                <label for="contactno">Contact No</label>
              </div>
            </div>
            <button class="btn" type="submit">Register</button>
            <a href="/auth/login"> Already Registered ! Login ?</a>
          </form>
        </div>
      </div>
    </section>
    <script src="../javascripts/mobileNav.js"></script>
    <script>
      var e = document.getElementById("donar");
      var element = document.getElementById("usernameLabel");
      function check() {
        if (e.checked) element.innerHTML = "Blood Bank Name";
        else element.innerHTML = "User Name";
      }
    </script>
  </body>
</html>
