<section class="notify">
  <div class="container">
    <div class="notification">
      <div
        class="alert <%= className %>"
        style="padding: 2rem; text-align: center"
      >
        <svg class="icon" style="width: 1.5rem; height: 1.5rem; float: left">
          <use xlink:href="../images/sprite.svg#info-circle"></use>
        </svg>
        <%=message %>
      </div>
    </div>
  </div>
</section>
