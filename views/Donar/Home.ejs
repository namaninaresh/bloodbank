<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../header'); %>
  </head>

  <body>
    <%- include('./navbar') %>
    <section class="home">
      <div class="container">
        <div class="homeMain">
          <h1 class="justify-center welcome">
            Welcome
            <span style="text-transform: capitalize; padding-left: 1rem">
              <%=user.username %></span
            >
          </h1>
          <div class="availableBlood">
            <h6 class="title justify-center">
              Total Available Blood In All Blood Banks
            </h6>
            <div class="blood-group-grid justify-center">
              <% availableBlood.map((_)=> {%>
              <div class="blood-groud">
                <div class="blood-group--header">
                  <h3 class="center">
                    <svg class="icon" style="margin: 0 0.3rem">
                      <use xlink:href="images/sprite.svg#droplet"></use>
                    </svg>
                    <%=_.BloodType %>
                  </h3>
                </div>
                <div class="blood-group--body">
                  <h2 class="units"><%=_.BloodUnits %></h2>
                  <p class="units-text">Units</p>
                </div>
              </div>
              <%}) %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="blood-banks-info">
      <div class="container">
        <div class="in-location">
          <h6>Available Blood Banks in your location</h6>
          <h2>6</h2>
        </div>
        <div class="line"></div>
        <div class="total">
          <h6>Total Blood Banks Registered</h6>
          <h2>12,400</h2>
        </div>
      </div>
    </section>

    <section class="content-block">
      <div class="container">
        <div class="row">
          <div class="col col-content white">
            <h4 class="text-title">
              <svg
                class="icon"
                style="margin: 0 0.3rem; width: 4rem; height: 4rem"
              >
                <use xlink:href="images/sprite.svg#search"></use>
              </svg>
            </h4>

            <p>Search For Blood Bank with Specific Blood Group.</p>
          </div>
          <div class="col col-content white">
            <h4 class="text-title">
              <svg
                class="icon"
                style="margin: 0 0.3rem; width: 4rem; height: 4rem"
              >
                <use xlink:href="images/sprite.svg#person-fill"></use>
              </svg>
            </h4>
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit.
              Reprehenderit, assumenda.
            </p>
          </div>
          <div class="col col-content white">
            <h4 class="text-title">Home Layouts</h4>
            <p>
              Lorem ipsum dolor sit amet consectetur adipisicing elit.
              Reprehenderit, assumenda.
            </p>
          </div>
        </div>
      </div>
    </section>

    <%- include('../includes/footer'); %>
    <script src="./javascripts/mobileNav.js"></script>
  </body>
</html>
