<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../header'); %>
  </head>
  <body>
    <%- include('./navbar') %>

    <section class="profile">
      <div class="container">
        <div class="user-profile">
          <div class="card">
            <div class="card-body">
              <div>
                <img src="/images/avatar.png" />
              </div>
              <div>
                <h4><%= userdata.username %></h4>
                <p><%= userdata.city %></p>

                <div class="center">
                  <a class="btn btn-accent center" style="margin: 0 0.5rem">
                    <svg class="icon">
                      <use xlink:href="images/sprite.svg#pencil"></use>
                    </svg>
                    Edit
                  </a>

                  <a class="btn btn-primary center" style="margin: 0 0.5rem">
                    <svg class="icon">
                      <use xlink:href="images/sprite.svg#trash"></use>
                    </svg>
                    Delete
                  </a>
                </div>
              </div>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
              <div>Blood Donated Till Now</div>
              <div>
                <h1><%= donated.bloodunits %> units</h1>
              </div>
            </div>
          </div>
        </div>
        <div class="user-details">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="d-flex">
                  <div class="user-title">
                    <h6>First Name</h6>
                  </div>
                  <div class="user-text"><%= userdata.firstname %></div>
                </div>
              </div>
              <hr />
              <div class="row">
                <div class="d-flex">
                  <div class="user-title">
                    <h6>Last Name</h6>
                  </div>
                  <div class="user-text"><%= userdata.lastname %></div>
                </div>
              </div>

              <hr />
              <div class="row">
                <div class="d-flex">
                  <div class="user-title">
                    <h6>Email</h6>
                  </div>
                  <div class="user-text"><%= userdata.email %></div>
                </div>
              </div>

              <hr />
              <div class="row">
                <div class="d-flex">
                  <div class="user-title">
                    <h6>Address</h6>
                  </div>
                  <div class="user-text"><%= userdata.address %></div>
                </div>
              </div>

              <hr />
              <div class="row">
                <div class="d-flex">
                  <div class="user-title">
                    <h6>City</h6>
                  </div>
                  <div class="user-text"><%= userdata.city %></div>
                </div>
              </div>

              <hr />
              <div class="row">
                <div class="d-flex">
                  <div class="user-title">
                    <h6>Contact No</h6>
                  </div>
                  <div class="user-text">+91 <%= userdata.contactno %></div>
                </div>
              </div>

              <hr />
            </div>
          </div>

          <div class="card">
            <div class="card-body">
              <div class="header">
                <h6>Available Blood In your Bank</h6>
              </div>
              <hr />
              <div class="grid--4">
                <% available.map((_)=> {%>
                <div class="blood-groud">
                  <div class="blood-group--header">
                    <h3><%= _.bloodtype %></h3>
                  </div>
                  <div class="blood-group--body">
                    <h2 class="units"><%= _.bloodunits %></h2>
                    <p class="units-text">Units</p>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <script src="./javascripts/mobileNav.js"></script>
  </body>
</html>
